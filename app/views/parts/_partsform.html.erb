<%= form_for @part do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :available %>
  <%= f.select(:available, options_for_select([['Not in stock', false], ['In stock', true]], @part.available)) %>
  
  <%= f.submit %>
<% end %>
