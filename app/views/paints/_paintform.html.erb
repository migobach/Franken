<%= form_for @paint do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :finish %>
  <%= f.text_field :finish %>

  <%= f.label :price %>
  <%= f.number_field :price %>
 
  <%= f.label :available %>
  <%= f.select(:available, options_for_select([['Not in stock', false], ['In stock', true]], @paint.available)) %>

  <%= f.submit %>
<% end %>